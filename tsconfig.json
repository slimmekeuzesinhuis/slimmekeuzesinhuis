{
  "compilerOptions": {
    /* --- ECMAScript/JSX --- */
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    /* --- Module resolution (Next.js 13+) --- */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* --- Strictness & tooling --- */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /* --- Node types (handig voor process.env, path, etc.) --- */
    "types": ["node"],

    /* --- Pad-alias voor @/* --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* --- JavaScript toestaan (project kan JS + TS mix zijn) --- */
    "allowJs": true,
    "checkJs": false
  },

  /* Next.js voegt dit bestand standaard toe; laten staan */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
